{{> head}}

<div class="container">
  <h2>Book Reviews</h2>

  {{> message }} 

  <table class="table">
    <thead>
      <tr>
        <th>Review ID</th>
        <th>Review Text</th>
        <th>Book Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each reviews}}
        <tr>
          <td>{{review_id}}</td>
          <td>{{review_text}}</td>
          <td>{{book_name}}</td>
          <td>
            <form action="/reviews/add" method="POST">
              <input type="hidden" name="review_id" value="{{review_id}}">
              {{#if taken}}
                <button type="submit" class="btn btn-secondary" disabled>Added</button>
              {{else}}
                <button type="submit" class="btn btn-primary">Add</button>
              {{/if}}
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{> footer}}