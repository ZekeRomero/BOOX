<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boox Collections</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .book-card img {
            height: 200px;
            object-fit: cover;
        }
        .book-card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Your Collections</h1>

        <!-- Favorites Section -->
        <div class="mb-5">
            <h2 class="text-center mb-4">Favorites</h2>
            {{#if favorites.length}}
            <div class="row">
                {{#each favorites}}
                <div class="col-md-3 book-card">
                    <div class="card h-100 shadow-sm">
                        <a href="/book/{{this.isbn}}" class="text-decoration-none text-dark">
                            {{#if this.coverLink}}
                            <img 
                                src="{{this.coverLink}}" 
                                alt="Cover image of {{this.title}}" 
                                class="card-img-top">
                            {{else}}
                            <img 
                                src="/path/to/placeholder.jpg" 
                                alt="Placeholder image" 
                                class="card-img-top">
                            {{/if}}
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text"><strong>ISBN:</strong> {{this.isbn}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p class="text-muted text-center">You have no favorites yet. Start adding to your collection!</p>
            {{/if}}
        </div>

        <!-- Future Reads Section -->
        <div>
            <h2 class="text-center mb-4">Future Reads</h2>
            {{#if futureReads.length}}
            <div class="row">
                {{#each futureReads}}
                <div class="col-md-3 book-card">
                    <div class="card h-100 shadow-sm">
                        <a href="/book/{{this.isbn}}" class="text-decoration-none text-dark">
                            {{#if this.coverLink}}
                            <img 
                                src="{{this.coverLink}}" 
                                alt="Cover image of {{this.title}}" 
                                class="card-img-top">
                            {{else}}
                            <img 
                                src="/path/to/placeholder.jpg" 
                                alt="Placeholder image" 
                                class="card-img-top">
                            {{/if}}
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text"><strong>ISBN:</strong> {{this.isbn}}</p>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p class="text-muted text-center">You have no future reads yet. Start exploring!</p>
            {{/if}}
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
